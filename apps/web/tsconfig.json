{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/components/*": [
        "../../packages/ui/*"
      ],
      "@/components/ui/*": [
        "../../packages/ui/ui/*"
      ],
      "@/hooks/*": [
        "../../packages/hooks/*"
      ],
      "@/lib/*": [
        "../../packages/lib/*"
      ],
      "@tradeguard/ui/*": [
        "../../packages/ui/*"
      ],
      "@tradeguard/hooks/*": [
        "../../packages/hooks/*"
      ],
      "@tradeguard/lib/*": [
        "../../packages/lib/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next\\dev/types/**/*.ts",
    ".next\\dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
